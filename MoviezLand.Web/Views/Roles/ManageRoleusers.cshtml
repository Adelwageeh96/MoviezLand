@model RoleUsersViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>@Model.RoleName</h2>
            <h5 class="mb-0">Add/Remove Users</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="ManageRoleUsers">
                <input type="hidden" asp-for="RoleName" />
                <input type="hidden" asp-for="RoleId" />
                @for (int i = 0; i < Model.Users.Count; i++)
                {
                    <div class="form-check mb-2">
                        <input type="hidden" asp-for="@Model.Users[i].UserName" />
                        <input type="hidden" asp-for="@Model.Users[i].UserId" />
                        <input asp-for="@Model.Users[i].IsInTheRole" class="form-check-input" />
                        <label class="form-check-label">@Model.Users[i].UserName</label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Close</a>
                </div>
            </form>
        </div>
    </div>
</div>
