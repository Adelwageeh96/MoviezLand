@model RoleUsersViewModel

@{
	ViewData["Title"] = "Manage Roles";
}

<form method="post" >
	<div class="card mt-4">
		<div class="card-header">
			<h2>@Model.RoleName</h2>
			 Add/Remove Users

		</div>
		<div class="card-body">
			<input type="hidden" asp-for="RoleName" />
			<input type="hidden" asp-for="RoleId"/>
			@for (int i = 0; i < Model.Users.Count; i++)
			{
				<div class="form-check m-1">
					<input type="hidden" asp-for="@Model.Users[i].UserName"/>
					<input type="hidden" asp-for="@Model.Users[i].UserId">
					<input  asp-for="@Model.Users[i].IsInTheRole" class="form-check-input"/>
					<label class="form-check-label" asp-for="@Model.Users[i].IsInTheRole">@Model.Users[i].UserName</label>

				</div>

			}
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
		<div class="card-footer">
			<button type="submit" class="btn btn-primary">Save</button>
			<a asp-action="Index" class="btn btn-secondary">Close</a>
		</div>

	</div>

</form>